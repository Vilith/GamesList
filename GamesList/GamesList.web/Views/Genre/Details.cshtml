@model DetailsVM
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

	<p class="lead">@Model.Description</p>

	@if (Model.GameImages.Any() == true)
	{
		<div id="genreCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.GameImages.Count; i++)
            {
                var image = Model.GameImages[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="~/Images/@image" class="d-block w-100 carousel-image" alt="@Model.Name image @(i + 1)">
                </div>
            }

        </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#genreCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                
            </button>

            <button class="carousel-control-next" type="button" data-bs-target="#genreCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
                
            </button>
        </div>
	}
    else
    {
        <p><em>No Images Availabel For This Genre!</em></p>
    }

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>	

